// pages/news/index.tsx - Enhanced news listing page
import { useState, useEffect } from 'react';
import { useRouter } from 'next/router';
import Link from 'next/link';
import Head from 'next/head';
import Layout from '@/components/Layout';
import { Card } from '@/components/ui/Card';
import { Button } from '@/components/ui/Button';
import { Input } from '@/components/ui/Input';
import { Badge } from '@/components/ui/Badge';
import { Skeleton } from '@/components/ui/Skeleton';
import { EmptyState } from '@/components/ui/EmptyState';
import { news } from '@/lib/api';
import { useDebounce } from '@/hooks/useDebounce';
import { formatRelativeTime, truncateText } from '@/lib/utils';
import { CATEGORIES, ROUTES } from '@/lib/constants';
import type { NewsArticle } from '@/types';

export default function NewsPage() {
  const router = useRouter();
  const [articles, setArticles] = useState<NewsArticle[]>([]);
  const [trending, setTrending] = useState<NewsArticle[]>([]);
  const [currentPage, setCurrentPage] = useState(1);
  const [totalPages, setTotalPages] = useState(1);
  const [loading, setLoading] = useState(true);
  const [selectedCategory, setSelectedCategory] = useState('');
  const [searchQuery, setSearchQuery] = useState('');
  
  const debouncedSearch = useDebounce(searchQuery, 500);

  useEffect(() => {
    loadNews();
  }, [currentPage, selectedCategory, debouncedSearch]);

  useEffect(() => {
    loadTrending();
  }, []);

  const loadNews = async () => {
    setLoading(true);
    try {
      if (debouncedSearch) {
        const { data } = await news.search(debouncedSearch, router.locale);
        setArticles(data);
        setTotalPages(1);
      } else {
        const { data } = await news.getAll(currentPage, selectedCategory);
        setArticles(data.items);
        setTotalPages(data.pages);
      }
    } catch (error) {
      console.error('Error loading news:', error);
    } finally {
      setLoading(false);
    }
  };

  const loadTrending = async () => {
    try {
      const { data } = await news.getTrending(5);
      setTrending(data);
    } catch (error) {
      console.error('Error loading trending:', error);
    }
  };

  const handleCategoryChange = (category: string) => {
    setSelectedCategory(category === selectedCategory ? '' : category);
    setCurrentPage(1);
  };

  const handlePageChange = (page: number) => {
    setCurrentPage(page);
    window.scrollTo({ top: 0, behavior: 'smooth' });
  };

  return (
    <>
      <Head>
        <title>Actualit√©s - Burundi Hub</title>
        <meta name="description" content="Restez inform√© avec les derni√®res nouvelles du Burundi" />
      </Head>

      <Layout>
        {/* Hero Section */}
        <div className="bg-gradient-to-r from-primary to-primary/80 text-white py-16">
          <div className="container">
            <h1 className="text-4xl md:text-5xl font-bold mb-4">üì∞ Actualit√©s</h1>
            <p className="text-xl opacity-90 mb-8">
              Restez inform√© avec les derni√®res nouvelles du Burundi
            </p>

            {/* Search Bar */}
            <div className="max-w-2xl">
              <Input
                type="search"
                placeholder="Rechercher des articles..."
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                className="bg-white"
                leftIcon={
                  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                }
              />
            </div>
          </div>
        </div>

        <div className="container py-8">
          {/* Category Filters */}
          <div className="mb-8">
            <h2 className="text-sm font-semibold text-muted mb-3">CAT√âGORIES</h2>
            <div className="flex flex-wrap gap-2">
              <Button
                variant={!selectedCategory ? 'primary' : 'outline'}
                size="sm"
                onClick={() => handleCategoryChange('')}
              >
                Tout
              </Button>
              {CATEGORIES.NEWS.map((category) => (
                <Button
                  key={category}
                  variant={selectedCategory === category ? 'primary' : 'outline'}
                  size="sm"
                  onClick={() => handleCategoryChange(category)}
                >
                  {category}
                </Button>
              ))}
            </div>
          </div>

          <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
            {/* Main Content */}
            <div className="lg:col-span-2">
              {loading ? (
                <div className="space-y-6">
                  {[1, 2, 3].map((i) => (
                    <Card key={i}>
                      <Skeleton className="h-48 mb-4" />
                      <Skeleton className="h-6 mb-2" />
                      <Skeleton className="h-20" />
                    </Card>
                  ))}
                </div>
              ) : articles.length === 0 ? (
                <EmptyState
                  icon="üì∞"
                  title="Aucun article trouv√©"
                  description="Essayez d'autres filtres ou recherches"
                  action={
                    <Button onClick={() => {
                      setSearchQuery('');
                      setSelectedCategory('');
                    }}>
                      R√©initialiser les filtres
                    </Button>
                  }
                />
              ) : (
                <>
                  <div className="space-y-6">
                    {articles.map((article) => (
                      <Link key={article.id} href={`${ROUTES.NEWS}/${article.id}`}>
                        <Card hoverable clickable>
                          {article.image_url && (
                            <img
                              src={article.image_url}
                              alt={article.title}
                              className="w-full h-64 object-cover rounded-lg mb-4"
                            />
                          )}
                          
                          <div className="flex items-center gap-3 mb-3">
                            <Badge variant="default">{article.category}</Badge>
                            <span className="text-sm text-muted">
                              {formatRelativeTime(article.created_at)}
                            </span>
                            {article.author && (
                              <span className="text-sm text-muted">
                                Par {article.author}
                              </span>
                            )}
                          </div>

                          <h2 className="text-2xl font-bold mb-2 hover:text-primary transition-colors">
                            {article.title}
                          </h2>

                          <p className="text-muted leading-relaxed mb-4">
                            {truncateText(article.content, 200)}
                          </p>

                          <div className="flex items-center justify-between">
                            <div className="flex items-center text-sm text-muted">
                              <svg className="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                              </svg>
                              {article.views} vues
                            </div>

                            <span className="text-primary font-semibold hover:underline">
                              Lire plus ‚Üí
                            </span>
                          </div>
                        </Card>
                      </Link>
                    ))}
                  </div>

                  {/* Pagination */}
                  {totalPages > 1 && (
                    <div className="flex items-center justify-center gap-2 mt-8">
                      <Button
                        variant="outline"
                        onClick={() => handlePageChange(currentPage - 1)}
                        disabled={currentPage === 1}
                      >
                        ‚Üê Pr√©c√©dent
                      </Button>
                      
                      <div className="flex items-center gap-1">
                        {Array.from({ length: Math.min(5, totalPages) }, (_, i) => {
                          let pageNum;
                          if (totalPages <= 5) {
                            pageNum = i + 1;
                          } else if (currentPage <= 3) {
                            pageNum = i + 1;
                          } else if (currentPage >= totalPages - 2) {
                            pageNum = totalPages - 4 + i;
                          } else {
                            pageNum = currentPage - 2 + i;
                          }

                          return (
                            <Button
                              key={pageNum}
                              variant={currentPage === pageNum ? 'primary' : 'outline'}
                              size="sm"
                              onClick={() => handlePageChange(pageNum)}
                            >
                              {pageNum}
                            </Button>
                          );
                        })}
                      </div>

                      <Button
                        variant="outline"
                        onClick={() => handlePageChange(currentPage + 1)}
                        disabled={currentPage === totalPages}
                      >
                        Suivant ‚Üí
                      </Button>
                    </div>
                  )}
                </>
              )}
            </div>

            {/* Sidebar */}
            <div className="space-y-6">
              {/* Trending Articles */}
              <Card>
                <h3 className="text-xl font-bold mb-4 flex items-center">
                  <span className="mr-2">üî•</span>
                  Tendances
                </h3>
                <div className="space-y-4">
                  {trending.map((article, index) => (
                    <Link key={article.id} href={`${ROUTES.NEWS}/${article.id}`}>
                      <div className="pb-4 border-b border-border last:border-0 last:pb-0 hover:bg-secondary/50 p-2 rounded transition-colors cursor-pointer">
                        <div className="flex gap-3">
                          <span className="text-2xl font-bold text-primary/30">
                            {index + 1}
                          </span>
                          <div className="flex-1">
                            <h4 className="font-semibold mb-1 line-clamp-2 hover:text-primary transition-colors">
                              {article.title}
                            </h4>
                            <p className="text-xs text-muted">
                              {article.views} vues ‚Ä¢ {formatRelativeTime(article.created_at)}
                            </p>
                          </div>
                        </div>
                      </div>
                    </Link>
                  ))}
                </div>
              </Card>

              {/* Newsletter Signup */}
              <Card>
                <h3 className="text-xl font-bold mb-3">üìß Newsletter</h3>
                <p className="text-sm text-muted mb-4">
                  Recevez les derni√®res nouvelles directement dans votre bo√Æte mail
                </p>
                <Input
                  type="email"
                  placeholder="votre@email.com"
                  className="mb-3"
                />
                <Button className="w-full" size="sm">
                  S'abonner
                </Button>
              </Card>

              {/* Popular Tags */}
              <Card>
                <h3 className="text-xl font-bold mb-4">üè∑Ô∏è Tags populaires</h3>
                <div className="flex flex-wrap gap-2">
                  {['Politique', '√âconomie', 'Sports', 'Culture', 'Technologie', 'Sant√©', '√âducation', 'Environnement'].map((tag) => (
                    <Badge key={tag} variant="default" className="cursor-pointer hover:bg-primary hover:text-white transition-colors">
                      {tag}
                    </Badge>
                  ))}
                </div>
              </Card>
            </div>
          </div>
        </div>
      </Layout>
    </>
  );
}

// pages/events/index.tsx - Enhanced events listing page
import { useState, useEffect } from 'react';
import { useRouter } from 'next/router';
import Link from 'next/link';
import Head from 'next/head';
import Layout from '@/components/Layout';
import { Card } from '@/components/ui/Card';
import { Button } from '@/components/ui/Button';
import { Badge } from '@/components/ui/Badge';
import { Skeleton } from '@/components/ui/Skeleton';
import { EmptyState } from '@/components/ui/EmptyState';
import { events } from '@/lib/api';
import { formatDate, formatCurrency } from '@/lib/utils';
import { CATEGORIES, ROUTES } from '@/lib/constants';
import type { Event } from '@/types';

export default function EventsPage() {
  const router = useRouter();
  const [eventsList, setEventsList] = useState<Event[]>([]);
  const [loading, setLoading] = useState(true);
  const [selectedCategory, setSelectedCategory] = useState('');
  const [viewMode, setViewMode] = useState<'grid' | 'list'>('grid');

  useEffect(() => {
    loadEvents();
  }, [selectedCategory]);

  const loadEvents = async () => {
    setLoading(true);
    try {
      const { data } = await events.getUpcoming(selectedCategory || undefined);
      setEventsList(data);
    } catch (error) {
      console.error('Error loading events:', error);
    } finally {
      setLoading(false);
    }
  };

  const getAvailableTickets = (event: Event) => {
    return event.capacity - event.tickets_sold;
  };

  const isAlmostFull = (event: Event) => {
    const available = getAvailableTickets(event);
    return available > 0 && available <= event.capacity * 0.2;
  };

  return (
    <>
      <Head>
        <title>√âv√©nements - Burundi Hub</title>
        <meta name="description" content="D√©couvrez et r√©servez des tickets pour les √©v√©nements au Burundi" />
      </Head>

      <Layout>
        {/* Hero Section */}
        <div className="bg-gradient-to-r from-purple-600 to-pink-600 text-white py-16">
          <div className="container">
            <h1 className="text-4xl md:text-5xl font-bold mb-4">üéâ √âv√©nements</h1>
            <p className="text-xl opacity-90">
              D√©couvrez et r√©servez vos tickets pour les meilleurs √©v√©nements au Burundi
            </p>
          </div>
        </div>

        <div className="container py-8">
          {/* Filters */}
          <div className="mb-8">
            <div className="flex items-center justify-between mb-4">
              <h2 className="text-sm font-semibold text-muted">CAT√âGORIES</h2>
              
              {/* View Toggle */}
              <div className="flex gap-2">
                <Button
                  variant={viewMode === 'grid' ? 'primary' : 'outline'}
                  size="sm"
                  onClick={() => setViewMode('grid')}
                  leftIcon={
                    <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                    </svg>
                  }
                />
                <Button
                  variant={viewMode === 'list' ? 'primary' : 'outline'}
                  size="sm"
                  onClick={() => setViewMode('list')}
                  leftIcon={
                    <svg className="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                  }
                />
              </div>
            </div>

            <div className="flex flex-wrap gap-2">
              <Button
                variant={!selectedCategory ? 'primary' : 'outline'}
                size="sm"
                onClick={() => setSelectedCategory('')}
              >
                Tous
              </Button>
              {CATEGORIES.EVENTS.map((category) => (
                <Button
                  key={category}
                  variant={selectedCategory === category ? 'primary' : 'outline'}
                  size="sm"
                  onClick={() => setSelectedCategory(category)}
                >
                  {category}
                </Button>
              ))}
            </div>
          </div>

          {/* Events Grid/List */}
          {loading ? (
            <div className={viewMode === 'grid' ? 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6' : 'space-y-4'}>
              {[1, 2, 3, 4, 5, 6].map((i) => (
                <Card key={i}>
                  <Skeleton className="h-48 mb-4" />
                  <Skeleton className="h-6 mb-2" />
                  <Skeleton className="h-20" />
                </Card>
              ))}
            </div>
          ) : eventsList.length === 0 ? (
            <EmptyState
              icon="üéâ"
              title="Aucun √©v√©nement trouv√©"
              description="Revenez bient√¥t pour d√©couvrir de nouveaux √©v√©nements!"
              action={
                <Button onClick={() => setSelectedCategory('')}>
                  Voir tous les √©v√©nements
                </Button>
              }
            />
          ) : (
            <div className={viewMode === 'grid' ? 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6' : 'space-y-4'}>
              {eventsList.map((event) => {
                const availableTickets = getAvailableTickets(event);
                const almostFull = isAlmostFull(event);

                return (
                  <Link key={event.id} href={`${ROUTES.EVENTS}/${event.id}`}>
                    <Card hoverable clickable className="h-full flex flex-col">
                      {/* Event Image */}
                      <div className="relative">
                        {event.image_url ? (
                          <img
                            src={event.image_url}
                            alt={event.title}
                            className="w-full h-48 object-cover rounded-lg"
                          />
                        ) : (
                          <div className="w-full h-48 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center">
                            <span className="text-6xl">üéâ</span>
                          </div>
                        )}
                        
                        {/* Badges */}
                        <div className="absolute top-2 right-2 flex gap-2">
                          {almostFull && (
                            <Badge variant="warning" className="shadow-lg">
                              üî• Bient√¥t complet
                            </Badge>
                          )}
                          {availableTickets === 0 && (
                            <Badge variant="error" className="shadow-lg">
                              Complet
                            </Badge>
                          )}
                        </div>
                      </div>

                      {/* Event Details */}
                      <div className="flex-1 mt-4">
                        <div className="flex items-center gap-2 mb-3">
                          <Badge>{event.category}</Badge>
                          <Badge variant="success">{formatCurrency(event.price_cents)}</Badge>
                        </div>

                        <h3 className="text-xl font-bold mb-2 line-clamp-2">
                          {event.title}
                        </h3>

                        <div className="space-y-2 text-sm text-muted">
                          <div className="flex items-center">
                            <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                            {formatDate(event.start_at)}
                          </div>

                          <div className="flex items-center">
                            <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            {event.venue}
                          </div>

                          <div className="flex items-center">
                            <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                            </svg>
                            {availableTickets} places restantes
                          </div>
                        </div>
                      </div>

                      {/* Action Button */}
                      <Button
                        className="w-full mt-4"
                        disabled={availableTickets === 0}
                      >
                        {availableTickets === 0 ? 'Complet' : 'R√©server'}
                      </Button>
                    </Card>
                  </Link>
                );
              })}
            </div>
          )}
        </div>
      </Layout>
    </>
  );
}
